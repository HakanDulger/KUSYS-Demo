@model StudentListViewModel

<div class="col-md-12">
    <form asp-action="UpdateStudent" method="post">
        <div class="card">
            <div class="card-header">
                <h3>Update Student</h3>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="col-md-6">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="form-group">
                            <label asp-for="StudentId" class="col-form-label"></label>
                            <input asp-for="StudentId" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="col-form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="col-form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate" class="col-form-label"></label>
                            <input asp-for="BirthDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="col-form-label"></label>
                            <input asp-for="PhoneNumber" type="number" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="col-form-label"></label>
                            <input asp-for="Address" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EMail" class="col-form-label"></label>
                            <input asp-for="EMail" class="form-control" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label asp-for="StudentId" class="col-form-label"></label>
                            <input asp-for="StudentId" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="col-form-label"></label>
                            <input asp-for="FirstName" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="col-form-label"></label>
                            <input asp-for="LastName" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate" class="col-form-label"></label>
                            <input asp-for="BirthDate" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="col-form-label"></label>
                            <input asp-for="PhoneNumber" readonly type="number" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="col-form-label"></label>
                            <input asp-for="Address" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="EMail" class="col-form-label"></label>
                            <input asp-for="EMail" readonly class="form-control" />
                        </div>
                    }
                    <h5>Matchings Course</h5>
                    <div class="form-group">
                        @for (int i = 0; i < Model.Courses.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Courses[i].CourseId" />
                                <input type="hidden" asp-for="@Model.Courses[i].CourseName" />
                                <input asp-for="@Model.Courses[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.Courses[i].IsSelected">
                                    @Model.Courses[i].CourseName
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>

</div>