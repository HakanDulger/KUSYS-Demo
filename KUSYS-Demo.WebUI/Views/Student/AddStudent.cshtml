@model StudentListViewModel

<div class="col-md-12">
    <form asp-action="AddStudent" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h3>Add Student</h3>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="col-form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class="col-form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-form-label"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate" class="col-form-label"></label>
                        <input asp-for="BirthDate" type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-form-label"></label>
                        <input asp-for="PhoneNumber" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-form-label"></label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EMail" class="col-form-label"></label>
                        <input asp-for="EMail" class="form-control" />
                    </div>
                    <h5>Matchings Course</h5>
                    <div class="form-group">
                        @for (int i = 0; i < Model.Courses.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Courses[i].CourseId" />
                                <input type="hidden" asp-for="@Model.Courses[i].CourseName" />
                                <input asp-for="@Model.Courses[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.Courses[i].IsSelected">
                                    @Model.Courses[i].CourseName
                                </label>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary" value="Add" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>
    
</div>
