@model CourseListViewModel

<div class="col-md-12">
    <form asp-action="AddCourse" method="post">
        <div class="card">
            <div class="card-header">
                <h3>Add Course</h3>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CourseId" class="col-form-label"></label>
                        <input asp-for="CourseId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseName" class="col-form-label"></label>
                        <input asp-for="CourseName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary" value="Add" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>

</div>